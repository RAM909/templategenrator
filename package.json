{
  "name": "wonder-transform-gui",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder -w",
    "watch:css": "npx tailwindcss -i ./renderer/style.css -o ./renderer/output.css --watch"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "archiver": "^7.0.0",
    "electron-is-dev": "^2.0.0",
    "exceljs": "^4.4.0",
    "fast-csv": "^4.3.6",
    "postcss-loader": "^8.2.0",
    "tailwindcss": "^4.1.17",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.wonder.transform",
    "productName": "WonderTransform",
    "forceCodeSigning": false,
    "directories": {
      "output": "dist"
    },
    "cscLink": null,
    "cscKeyPassword": null,
    "win": {
      "target": "zip",
      "publisherName": null,
      "certificateSubjectName": null,
      "certificateFile": null,
      "certificatePassword": null,
      "sign": false,
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false,
      "signDlls": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
